<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

    <xacro:include filename="inertial_macros.xacro"/>

    <material name="black"> 
        <color rgba = "0 0 0 1"/>
    </material>

    <material name="gray"> 
        <color rgba = "0.5 0.5 0.5 1"/>
    </material>

    <!-- BASE LINK -->

    <link name="base_link">

    </link>

    <!-- CHASSIS LINK -->

    <joint name="chassis_joint" type="fixed">
        <parent link="base_link" />
        <child link="chassis_link" />
        <origin xyz="-0.2935 0 0"/>
    </joint>

    <link name="chassis_link">
        <visual>
        <origin xyz="0.172 0 0.3705" />
            <geometry>
                <box size="0.344 0.344 0.741" />
            </geometry>
            <material name="black" />
        </visual>

        <collision>
        <origin xyz="0.172 0 0.3705" />
            <geometry>
                <box size="0.344 0.344 0.741" />
            </geometry>
        </collision>

        <xacro:inertial_box mass="24" x="0.344" y="0.344" z="0.741">
            <origin xyz="0.172 0 0.3705" rpy="0 0 0"/>
        </xacro:inertial_box>
    </link>

    <!-- LEFT WHEEL LINK -->

    <joint name="left_wheel_joint" type="continuous">
        <parent link="base_link" />
        <child link="left_wheel_link" />
        <origin xyz="0 0.172 0" rpy="-${pi/2} 0 0"/>
        <axis xyz="0 0 1"/>
    </joint>

    <link name="left_wheel_link">
        <visual>
            <geometry>
                <cylinder radius="0.075" length="0.035"/>
            </geometry>
            <material name="gray" />
        </visual>

        <collision>
            <geometry>
                <cylinder radius="0.075" length="0.035"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.5" length="0.035" radius="0.075">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>


    <!-- RIGHT WHEEL LINK -->

    <joint name="right_wheel_joint" type="continuous">
        <parent link="base_link" />
        <child link="right_wheel_link" />
        <origin xyz="0 -0.172 0" rpy="${pi/2} 0 0"/>
        <axis xyz="0 0 -1"/>
    </joint>

    <link name="right_wheel_link">
        <visual>
            <geometry>
                <cylinder radius="0.075" length="0.035"/>
            </geometry>
            <material name="gray" />
        </visual>

        <collision>
            <geometry>
                <cylinder radius="0.075" length="0.035"/>
            </geometry>
        </collision>

        <xacro:inertial_cylinder mass="0.5" length="0.035" radius="0.075">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>


    <!-- CASTER WHEEL LINK -->

    <joint name="caster_wheel_joint" type="fixed">
        <parent link="chassis_link" />
        <child link="caster_wheel_link" />
        <origin xyz="0.067 0 0" />
    </joint>

    <link name="caster_wheel_link">
        <visual>
            <geometry>
                <sphere radius="0.067" />
            </geometry>
            <material name="gray" />
        </visual>

        <collision>
            <geometry>
                <sphere radius="0.067" />
            </geometry>
        </collision>

        <xacro:inertial_sphere mass="0.5" radius="0.067">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_sphere>
    </link>



</robot>